<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_4radius"
    android:gravity="center"
    android:orientation="vertical"
    android:minWidth="300dp"
    >

    <TextView
        android:id="@+id/text_catchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:text="抓取成功"
        android:textColor="#1A1A1A"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="132dp"
        android:layout_height="150dp"
        android:src="@mipmap/result" />

    <TextView
        android:id="@+id/text_resultMessage"
        style="@style/commonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="恭喜抓取成功！" />

    <TextView
        style="@style/commonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享可获得娃娃币奖励哦！"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/divider_pink" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="64dp"
            android:background="@drawable/bg_pink_solid_4radius"
            android:paddingBottom="9dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="9dp"
            android:text="好运继续"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pink_solid_4radius"
            android:paddingBottom="9dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="9dp"
            android:text="  关    闭  "
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>