<?xml version="1.0" encoding="utf-8"?>
<com.jyt.baseapp.view.widget.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="256dp"
    android:layout_height="wrap_content"
    android:minWidth="256dp"
    android:padding="13dp"
    android:background="@color/white"
    >
    <com.jyt.baseapp.view.widget.RoundLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@mipmap/dialog_backgrond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="12dp"
            android:text="签到"
            android:textColor="@color/white" />
        <ImageView
            android:src="@mipmap/pig"
            android:layout_width="60dp"
            android:layout_height="90dp" />

        <TextView
            android:id="@+id/text_add_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="12dp"
            android:text="金币+10"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_add_coinDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="获取10个金币"
            android:textColor="@color/white" />
    </com.jyt.baseapp.view.widget.RoundLinearLayout>

    <View
        android:background="#AEDAF7"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.jyt.baseapp.view.widget.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_done"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="#AEDAF7"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </com.jyt.baseapp.view.widget.RoundLinearLayout>

</com.jyt.baseapp.view.widget.RoundLinearLayout>