<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <ImageView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_login" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_margin="5dp"
        android:background="@drawable/bg_white_4radius"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/bg_pink_border_white_solide_3radius">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/phone" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/v_psdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_pink_border_white_solide_3radius"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/psd" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/input_psd"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/v_codeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pink_border_white_solide_3radius"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/safe" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/input_code"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="#DDDDDD"
                        android:textSize="10dp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/btn_getCode"
                    android:layout_width="70dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_pink_border_white_solide_3radius"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="获取验证码"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#DDDDDD"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_login"
                style="@style/commonBtn"
                android:layout_marginLeft="63dp"
                android:layout_marginRight="63dp"
                android:layout_marginTop="15dp"
                android:text="登录" />

            <RelativeLayout
                android:id="@+id/v_loginBtnGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_marginRight="63dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/btn_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="马上注册"
                    android:textColor="#F6B6C6"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/btn_forgetPsd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="忘记密码？"
                    android:textColor="#F6B6C6"
                    android:textSize="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/v_registerBtnGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_marginRight="63dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btn_toLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已有账号去登录"
                    android:textColor="#F6B6C6"
                    android:textSize="10dp" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <!--分割线-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第三方登录"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="14dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />
            </LinearLayout>

            <!--微信登录按钮-->
            <LinearLayout
                android:id="@+id/btn_wechartLogin"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="63dp"
                android:layout_marginRight="63dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_green_5radius"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="微信登录"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:tag="1"
                    android:id="@+id/v_agree"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录表示同意"
                    android:textColor="#CCCCCC"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/text_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户协议与隐私条款"
                    android:textColor="#666666"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>