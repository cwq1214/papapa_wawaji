<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jyt.baseapp.view.widget.RefreshRecyclerView
        android:layout_weight="1"
        android:id="@+id/v_refreshRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/bg_white_4radius">

    </com.jyt.baseapp.view.widget.RefreshRecyclerView>

    <View
        android:background="#DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/btn_checkAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical">

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/uncheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_exchangeCoin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f8c5d1"
            android:gravity="center"
            android:text="兑换娃娃币"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#f8c5d1"
            android:gravity="center"
            android:text="提交发货"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </LinearLayout>
</LinearLayout>