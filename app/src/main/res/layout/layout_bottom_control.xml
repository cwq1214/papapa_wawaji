<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_bottomControl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        android:text="30''"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            android:clickable="true"
            android:src="@drawable/sel_arrow_up2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:alpha="1"
                android:clickable="true"
                android:src="@drawable/sel_arrow_left2" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="105dp"
                android:alpha="1"
                android:clickable="true"
                android:src="@drawable/sel_arrow_right2" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_down"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@id/img_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:alpha="1"
            android:clickable="true"
            android:src="@drawable/sel_arrow_down2" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/v_doneLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="100dp"
        android:alpha="1"
        android:clipChildren="false">

        <com.jyt.baseapp.view.widget.CircleProgressView
            android:id="@+id/v_circleProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:alpha="0.25"
            android:background="@drawable/shape_parimycolor_circle"></View>

        <ImageView
            android:id="@+id/img_done"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@drawable/sel_cachtit2" />
    </RelativeLayout>
</RelativeLayout>