<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--头像-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="asda"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="gong"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>

       <LinearLayout
           android:orientation="vertical"
           android:background="#F6F6F6"
           android:padding="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:showDividers="middle"
               android:divider="@drawable/divider_pink"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:background="@drawable/bg_white_4radius">

               <com.jyt.baseapp.view.widget.LabelAndTextItem
                   android:id="@+id/v_toBalance"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:labelText="我的娃娃币"
                   app:showRightArrow="true">

               </com.jyt.baseapp.view.widget.LabelAndTextItem>

               <com.jyt.baseapp.view.widget.LabelAndTextItem
                   android:id="@+id/v_toMyWaWa"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:labelText="我的娃娃"
                   app:showRightArrow="true">

               </com.jyt.baseapp.view.widget.LabelAndTextItem>
           </LinearLayout>


           <LinearLayout
               android:showDividers="middle"
               android:divider="@drawable/divider_pink"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:background="@drawable/bg_white_4radius"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.jyt.baseapp.view.widget.LabelAndTextItem
                   android:id="@+id/v_toAddress"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:labelText="我的收获地址"
                   app:showRightArrow="true">

               </com.jyt.baseapp.view.widget.LabelAndTextItem>

               <com.jyt.baseapp.view.widget.LabelAndTextItem
                   android:id="@+id/v_toOrder"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:labelText="娃娃配送订单"
                   app:showRightArrow="true">

               </com.jyt.baseapp.view.widget.LabelAndTextItem>
           </LinearLayout>

           <LinearLayout
               android:showDividers="middle"
               android:divider="@drawable/divider_pink"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:background="@drawable/bg_white_4radius"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:paddingLeft="20dp"
                   android:paddingRight="20dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="false"
                       android:layout_centerVertical="true"
                       android:text="背景音效" />

                   <ImageView
                       android:id="@+id/img_BGMControl"
                       android:layout_width="43dp"
                       android:layout_height="28dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:src="@mipmap/selector_unsel" />
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:paddingLeft="20dp"
                   android:paddingRight="20dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="false"
                       android:layout_centerVertical="true"
                       android:text="音效" />

                   <ImageView
                       android:id="@+id/img_voiceControl"
                       android:layout_width="43dp"
                       android:layout_height="28dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:src="@mipmap/selector_unsel" />
               </RelativeLayout>
           </LinearLayout>


           <LinearLayout
               android:showDividers="middle"
               android:divider="@drawable/divider_pink"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:background="@drawable/bg_white_4radius"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.jyt.baseapp.view.widget.LabelAndTextItem
                   android:id="@+id/v_toGuidance"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:labelText="使用说明"
                   app:showRightArrow="true"></com.jyt.baseapp.view.widget.LabelAndTextItem>

               <com.jyt.baseapp.view.widget.LabelAndTextItem
                   android:id="@+id/v_toAboutUs"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:labelText="关于我们"
                   app:showRightArrow="true"></com.jyt.baseapp.view.widget.LabelAndTextItem>

               <com.jyt.baseapp.view.widget.LabelAndTextItem
                   android:id="@+id/v_toContractUs"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:labelText="联系我们"
                   app:showRightArrow="true"></com.jyt.baseapp.view.widget.LabelAndTextItem>

               <com.jyt.baseapp.view.widget.LabelAndTextItem
                   android:id="@+id/v_toFeedback"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:labelText="意见反馈"
                   app:showRightArrow="true"></com.jyt.baseapp.view.widget.LabelAndTextItem>
           </LinearLayout>

           <LinearLayout
               android:showDividers="middle"
               android:divider="@drawable/divider_pink"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:background="@drawable/bg_white_4radius"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.jyt.baseapp.view.widget.LabelAndTextItem
                   android:id="@+id/v_viewVersion"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:labelText="版本信息"
                   app:showRightArrow="true"></com.jyt.baseapp.view.widget.LabelAndTextItem>
           </LinearLayout>

           <TextView
               android:id="@+id/text_logout"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginBottom="37dp"
               android:layout_marginLeft="38dp"
               android:layout_marginRight="38dp"
               android:layout_marginTop="25dp"
               android:background="@drawable/bg_white_4radius"
               android:gravity="center"
               android:text="退出登录"
               android:textColor="#1A1A1A"
               android:textSize="14dp" />
           </LinearLayout>

    </LinearLayout>
</ScrollView>