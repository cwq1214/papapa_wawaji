<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <ImageView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_login" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_margin="5dp"
        android:background="@drawable/bg_white_4radius"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_pink_border_white_solide_3radius"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/phone" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/v_psdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_pink_border_white_solide_3radius"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/psd" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/input_psd"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/v_codeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pink_border_white_solide_3radius"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/safe" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/input_code"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="#DDDDDD"
                        android:textSize="10dp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/btn_getCode"
                    android:layout_width="70dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_pink_border_white_solide_3radius"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="获取验证码"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#DDDDDD"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_confirm"
                style="@style/commonBtn"
                android:layout_width="match_parent"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="15dp"
                android:text="重置密码" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>