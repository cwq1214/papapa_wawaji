<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bg_white_4radius"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="充娃娃币"
            android:textColor="#1A1A1A"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:divider="@drawable/divider_25padding_pink"
            android:orientation="vertical"
            android:showDividers="middle">

            <com.jyt.baseapp.view.widget.RechargeItem
                android:id="@+id/v_price5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:coin="50"
                app:price="5" />

            <com.jyt.baseapp.view.widget.RechargeItem
                android:id="@+id/v_price10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:coin="100"
                app:give="10"
                app:price="10" />

            <com.jyt.baseapp.view.widget.RechargeItem
                android:id="@+id/v_price20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:coin="200"
                app:give="30"
                app:price="20" />

            <com.jyt.baseapp.view.widget.RechargeItem
                android:id="@+id/v_price50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:coin="500"
                app:give="90"
                app:price="50" />

            <com.jyt.baseapp.view.widget.RechargeItem
                android:id="@+id/v_price100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:coin="1000"
                app:give="200"
                app:price="100" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>