<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.jyt.baseapp.view.widget.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_4radius"
            android:divider="@drawable/divider_full_pink"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_doll"
                    android:layout_width="96dp"
                    android:layout_height="96dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_dollName"
                        style="@style/commonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="----" />

                    <TextView
                        style="@style/smallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="获得时间：" />

                    <TextView
                        android:id="@+id/text_date"
                        style="@style/smallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="----/--/-- --:--:--" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/commonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配送费用:" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="11dp"
                            android:src="@mipmap/coin" />

                        <TextView
                            android:id="@+id/text_coin"
                            style="@style/commonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="0币" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/v_selAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="90dp">

                <LinearLayout
                    android:id="@+id/v_noAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="39dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/exclamatory_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="您还没有设置收货地址哦" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v_addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="38dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/location" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_receiver"
                                style="@style/commonText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收货人：" />

                            <TextView
                                android:id="@+id/text_tel"
                                style="@style/commonText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="**********" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/text_address"
                            style="@style/commonText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="--------" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/right" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_send"
                style="@style/commonText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="提交发货" />

        </com.jyt.baseapp.view.widget.RoundLinearLayout>
        <com.jyt.baseapp.view.widget.RoundLinearLayout
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/commonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="邮寄寄存说明" />

            <TextView
                style="@style/commonText"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="邮寄规则：" />

            <TextView
                android:textColor="#000000"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="1.单次申请邮寄2个以上（含2个）娃娃全国包邮。" />

            <TextView
                android:textColor="#000000"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="2.单次申请邮寄一个娃娃，需支付相应的娃娃币作为邮费。" />

            <TextView
                style="@style/commonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="寄存说明：" />

            <TextView
                android:textColor="#000000"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="你的娃娃寄存3天，3天后不进行提交发货的，系统自动兑换成相应的娃娃币。" />
        </com.jyt.baseapp.view.widget.RoundLinearLayout>

    </LinearLayout>
</ScrollView>
