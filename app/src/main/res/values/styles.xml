<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

   <style name="commonBtn">
       <item name="android:gravity">center</item>
       <item name="android:textColor">@color/white</item>
       <item name="android:background">@drawable/sel_commonbtn_bg</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">31dp</item>
       <item name="android:clickable">true</item>
   </style>

    <style name="commonText">
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="roomStatusText">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:textSize">10dp</item>
    </style>
    <!--游戏中-->
    <style name="roomStatus_positive" parent="roomStatusText">
        <item name="android:textColor">#FF8460</item>
    </style>
    <!--空闲中-->
    <style name="roomStatus_negative" parent="roomStatusText">
        <item name="android:textColor">#3CC3F0</item>
    </style>

    <!--tab style-->
    <style name="commonTabStyle" parent="">

    </style>


    <declare-styleable name="LabelAndTextItem">
        <attr name="labelText" format="string"></attr>
        <attr name="valueText" format="string"></attr>
        <attr name="labelTextColor" format="color"></attr>
        <attr name="valueTextColor" format="color"></attr>
        <attr name="labelTextSize" format="dimension"></attr>
        <attr name="valueTextSize" format="dimension"></attr>
        <attr name="showRightArrow" format="boolean"></attr>
        <attr name="needInput" format="boolean"></attr>
        <attr name="hintText" format="string"></attr>
    </declare-styleable>

    <!--白色按钮-->
    <style name="whiteBtn" parent="commonBtn">
        <item name="android:background">@drawable/bg_white_4radius</item>
        <item name="android:textColor">#1A1A1A</item>
    </style>
    
    <!--输入框-->
    <style name="commonInputText">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left|top</item>
    </style>
    <style name="singleLineInputText" parent="commonInputText">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="smallText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">10dp</item>
    </style>

</resources>
